<!DOCTYPE html>
<html>
  <head>
    <title><%=t('app_name') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to("<h1> #{t('app_name')}</h1>".html_safe,root_path,class:"navbar-brand") %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">

            <li class="nav-item active">
              <%= link_to("<h5>Projects</h5>".html_safe,projects_path,class:"nav-link") %>
            </li>
            <li class="nav-item" >
              <%= link_to("<h5>Tasks</h5>".html_safe,tasks_path,class:"nav-link") %>
              </li>
            <li class="nav-item" >
              <%= link_to("<h5>Assignments</h5>".html_safe,assignments_path,class:"nav-link") %>
            </li>
            <% if current_user && current_user.is_admin? %>
            <li class="nav-item">
              <%= link_to("<h5>User Accounts</h5>".html_safe,root_path,class:"nav-link") %>
            </li>
          <% end %>
          <% if current_user %>
            <li class="nav-item">
              <%= link_to("<h5>Profile</h5>".html_safe,user_path(current_user),class:"nav-link") %>
            </li>
            <li class="nav-item">
              <%= link_to("<h5>Sign Out</h5>".html_safe,destroy_user_session_path,class:"nav-link") %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to("<h5>Sign in</h5>".html_safe,new_user_session_path,class:"nav-link") %>
            </li><li class="nav-item">
              <%= link_to("<h5>Sign up</h5>".html_safe,new_user_registration_path,class:"nav-link") %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <section>
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>

      </div>
      <p></p>
    </section>
    <footer>
      <p class:"text-center">
        &copy; 2019, Enow Mbi
      </p>
    </footer>
  </body>
</html>
