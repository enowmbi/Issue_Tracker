<% invited_users = [] %>
<div class="row">
  <div class="col-md-6 border-secondary border-right">
    <strong>Invite users</strong>
    <hr/>
    Invite users to create an account and join this team.Each user will be sent a confirmation email in which they can supply their own unique password.
    <div>
      <%= form.fields_for :users do |users_form| %>
        <div class="row">
        <div class="form-group col-md-6">
          <strong><%= users_form.label :first_name %></strong>
          <%= users_form.text_field :first_name,class: "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <strong> <%= users_form.label :last_name %></strong>
          <%= users_form.text_field :last_name,class: "form-control" %>
        </div>
        </div>
        <div class="form-group">
          <strong><%= users_form.label :email %></strong>
          <%= users_form.text_field :email,class: "form-control" %>
        </div>
        <div class="action">
          <%= link_to("Remove user",root_path,class:"btn btn-outline-secondary btn-sm")  %>
        </div>
        <hr/>
        <div class="action">
          <%= link_to("Add User", root_path,class: "btn btn-success") %>
        </div>
      <% end %>
      <hr/>
    </div>
  </div>
  <div class="col-md-6">
    <strong>Team Members </strong><span class="badge badge-primary badge-pill"><%= 3 %></span>
    <hr/>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% [{first_name: "Enow",last_name: "Mbi",email: "benowmbi@gmail.com"},{first_name: "Aaron",last_name: "Peterson",email:"aaron_peterson@rails.org"},{first_name: "Ben",last_name: "Orenstein",email: "ben_orenstein@thoughtbot.com"}].each do |user| %>
          <tr>
            <td><%= "#{user[:first_name]} #{user[:last_name]}" %></td>
            <td><%= user[:email] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

