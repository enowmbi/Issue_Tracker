<div class="row">
  <div class="col-md-4 border-secondary border-right">
    <h5><strong>Invite users</strong></h5>
    <hr/>
    Invite users to join this team.Each user will be sent an email with instructions to follow.
    <div>
      <%= form_for(User.new,url: user_invitation_path) do |form| %>
        <div class="form-group ">
          <strong> <%= form.label :name %></strong>
          <%= form.text_field :name,class: "form-control" %>
        </div>
        <div class="form-group">
          <strong><%= form.label :email %></strong>
          <%= form.email_field :email,class: "form-control" %>
        </div>
        <div class="action">
          <%= form.button "Invite User",class: "btn btn-success" %>
        </div>

        <div>
          <%= hidden_field_tag(:team_id, @team.id) %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <h5><strong>Invited Team Members </strong><span class="badge badge-primary badge-pill"><%= 3 %></span></h5>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Date of Invitation</th>
        </tr>
      </thead>
      <tbody>
        <% team_members_pending_acceptance(@team).each do |invitee| %>
          <tr>
            <td><%= invitee[0] %></td>
            <td><%= invitee[1] %></td>
            <td><%= invitee[3] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </table>
  </div>
</div>

