<div class="row">
  <div class="col-12">
    <h2 class="text-center">Profile for <%= @user.name.to_s.humanize %></h2>
  </div>
</div>
<p></p>
<%= form_with(model:@user, local:true,class:"form-horizontal") do |f| %>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="form-group col-md-4">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control",readonly: true %>
    </div>
    <div class="col-md-4">
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="form-group col-md-4">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control",readonly: true %>
    </div>
    <div class="col-md-4">
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="form-group col-md-4">
      <%= f.label :phone %>
      <%= f.text_field :phone, class:"form-control",readonly: true %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <%= link_to "Back", :back,class:"btn btn-secondary" %>
      <% if user_signed_in? && current_user.id == f.object.id %>
        <%= link_to "Edit Profile",edit_user_registration_path,class:"btn btn-primary" %> 
        <%= link_to "Logout",destroy_user_session_path,class:"btn btn-secondary" %> 
      <% end %>
    </div>
  </div>

<% end %>
</div>
