<h5><strong> Project Details </strong></h5>
<hr/>
<div class= "row">
  <div class="col-md-9">
    <strong>Name:</strong>
    <%= @project.name %>
  </div>
  <div class="col-md-3">
    <strong>Status:</strong>
    <%= @project.status %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <strong>Description:</strong>
    <p>
      <%= @project.description %>
    </p>
  </div>
</div>
<div class="text-center">
  <hr/>
  <%= link_to 'Add Task',new_team_project_path(params[:team_id]),class: "btn btn-primary" %> |
  <%= link_to 'Edit', edit_team_project_path(params[:team_id],@project),class: "btn btn-warning" %> |
  <%= link_to 'Back', team_projects_path(params[:team_id]),class: "btn btn-secondary" %>
  <hr/>
</div>
<div class="row">
  <div class="col-12">
    <h5><strong>Tasks</strong></h5>
    <hr/>
    <% if @project.tasks_count > 0 %>

      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><%= task.priority %></td>
              <td><%= task.status %></td>
              <td><%= link_to 'Show', task,class:"btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Edit', edit_task_path(task),class:"btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No task yet. <%= link_to('Add one',root_path) %>
    <% end %>
  </div>
</div>

