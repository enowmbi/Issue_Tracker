<p id="notice"><%= notice %></p>

<h1>tasks</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Severity</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.severity %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task,class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task),class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New task', new_task_path,class:"btn btn-primary" %>
