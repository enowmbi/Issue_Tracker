<h1>Teams</h1>

<table class="table table-responsive table-sm">
  <thead>
    <tr>
      <th>Name <%= sort_by_name_asc %><%= sort_by_name_desc %></th>
      <th>Active <%= sort_by_active_asc %><%= sort_by_active_desc %></th>
      <th>Owner<%= sort_by_owner_asc %><%= sort_by_owner_desc %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team_activity(team) %></td>
        <td><%= team_owner(team).name %></td>
        <td><%= link_to 'Show', team, class: "btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Edit', edit_team_path(team), class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: "Are you sure you want to delete this team (#{team.name}) ?" }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path,class: "btn btn-primary" %>
