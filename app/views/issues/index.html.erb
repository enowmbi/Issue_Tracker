<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Severity</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.severity %></td>
        <td><%= issue.status %></td>
        <td><%= link_to 'Show', issue,class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue),class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path,class:"btn btn-primary" %>
